<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--tag tree-->
    <record id="servicerequest_tag_view_tree" model="ir.ui.view">
        <field name="name">servicerequest.tag.view.tree</field>
        <field name="model">servicerequest.tag</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <!--    Action for servicerequest tag model.-->
    <record id="action_servicerequest_tag" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">servicerequest.tag</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new record!
            </p>
        </field>
    </record>
</odoo>